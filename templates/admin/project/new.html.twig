{% extends 'admin/index.html.twig' %}

{% block title %}Create New Project{% endblock %}

{% block admin_content %}
    <section class="relative bg-stone-50 py-10">
        <div class="w-full max-w-7xl mx-auto px-6 lg:px-8 overflow-x-auto">
            <div class="flex items-center justify-between mb-5">
                <h1 class="text-2xl font-semibold text-gray-900">Create New Project</h1>
            </div>

            {{ form_start(form) }}
            <div class="bg-white p-6 rounded-lg shadow-md space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.name) }}</label>
                    {{ form_widget(form.name, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-gray-900' } }) }}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.description) }}</label>
                    {{ form_widget(form.description, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-gray-900' } }) }}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.client) }}</label>
                    {{ form_widget(form.client, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-gray-900' } }) }}
                </div>

                <div class="flex items-center">
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.active) }}</label>
                    {{ form_widget(form.active, { 'attr': { 'class': 'ml-2 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' } }) }}
                </div>

                <div class="flex justify-end">
                    <button type="submit"
                            class="py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none">
                        Save Project
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
