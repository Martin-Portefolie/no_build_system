{% extends 'admin/index.html.twig' %}

{% block title %}Create New Team{% endblock %}

{% block admin_content %}
    <section class="relative bg-stone-50 py-10">
        <div class="w-full max-w-7xl mx-auto px-6 lg:px-8 overflow-x-auto">
            <div class="flex items-center justify-between mb-5">
                <h1 class="text-2xl font-semibold text-gray-900">Create New Team</h1>
            </div>

            {{ form_start(form) }}
            <div class="bg-white p-6 rounded-lg shadow-md space-y-4">
                <!-- Team Name Input -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.name) }}</label>
                    {{ form_widget(form.name, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-gray-900' } }) }}
                </div>

                <!-- User Selection (Checkboxes) -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.users) }}</label>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {{ form_widget(form.users, { 'attr': { 'class': 'form-checkbox text-indigo-600' } }) }}
                    </div>
                    <p class="text-xs text-gray-500 mt-1">Select users to be part of this team.</p>
                </div>

                <!-- Project Selection (Checkboxes) -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.projects) }}</label>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {{ form_widget(form.projects, { 'attr': { 'class': 'form-checkbox text-indigo-600' } }) }}
                    </div>
                    <p class="text-xs text-gray-500 mt-1">Assign projects to this team.</p>
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button type="submit"
                            class="py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none">
                        Create Team
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
