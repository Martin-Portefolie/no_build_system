{% extends 'base.html.twig' %}

{% block title %}Create New Client{% endblock %}

{% block body %}
    <section class="relative bg-stone-50 py-10">
        <div class="w-full max-w-7xl mx-auto px-6 lg:px-8 overflow-x-auto">
            <h1 class="text-2xl font-semibold text-gray-900 mb-6">Create New Client</h1>

            <div class="bg-white p-6 rounded-lg shadow-md">
                {{ form_start(form) }}
                {{ form_row(form.name, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm'}}) }}
                {{ form_row(form.contactEmail, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm'}}) }}
                {{ form_row(form.contactPhone, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm'}}) }}

                <button type="submit"
                        class="mt-4 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    Create Client
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
