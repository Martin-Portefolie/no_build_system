{% extends 'admin/index.html.twig' %}

{% block title %}Create New Client{% endblock %}

{% block admin_content %}
    <section class="relative bg-stone-50 py-10">
        <div class="w-full max-w-7xl mx-auto px-6 lg:px-8 overflow-x-auto">
            <div class="flex items-center justify-between mb-5">
                <h1 class="text-2xl font-semibold text-gray-900">Create New Client</h1>
            </div>

            {{ form_start(form) }}
            <div class="bg-white p-6 rounded-lg shadow-md space-y-4">
                <!-- Client Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.name, 'Client Name') }}</label>
                    {{ form_widget(form.name, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-gray-900' } }) }}
                </div>

                <!-- Contact Email -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.contactEmail, 'Contact Email') }}</label>
                    {{ form_widget(form.contactEmail, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-gray-900' } }) }}
                </div>

                <!-- Contact Phone -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">{{ form_label(form.contactPhone, 'Contact Phone') }}</label>
                    {{ form_widget(form.contactPhone, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-gray-900' } }) }}
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button type="submit"
                            class="py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none">
                        Save Client
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}