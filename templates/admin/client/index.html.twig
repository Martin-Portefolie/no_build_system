{% extends 'admin/index.html.twig' %}

{% block title %}Client Management{% endblock %}

{% block admin_content %}
    <section class="relative bg-background-section py-10">
        <div class="w-full max-w-7xl mx-auto px-6 lg:px-8 overflow-x-auto">
            <!-- Header Section -->
            <div class="flex items-center justify-between mb-5">
                <h1 class=" text-lg text-text-standard">Client Management</h1>

                <!-- Create New Client Button -->
                <a href="{{ path('admin_client_new') }}"
                   class="inline-flex justify-center py-2 px-4 shadow-sm text-base  rounded-md text-white bg-button-new hover:bg-button-hover-new focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-highlight">
                    Create New Client
                </a>
            </div>

            <!-- Client List -->
            <div class="space-y-6">
                {% for client in clientDataArray %}
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <form action="#" method="post">
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <!-- Client Name -->
                                <div>
                                    <label for="name_{{ client.id }}" class="block text-sm text-text-standard ">Name</label>
                                    <input type="text" name="name" id="name_{{ client.id }}" value="{{ client.name }}"
                                           class="mt-1 block w-full px-4 py-2 border border rounded-md shadow-sm focus:outline-none text-text-standard">
                                </div>

                                <!-- Client Email -->
                                <div>
                                    <label for="email_{{ client.id }}" class="block text-sm text-text-standard ">Email</label>
                                    <input type="email" name="email" id="email_{{ client.id }}" value="{{ client.email }}"
                                           class="mt-1 block w-full px-4 py-2 border border rounded-md shadow-sm focus:outline-none text-text-paragraph">
                                </div>

                                <!-- Client Phone -->
                                <div>
                                    <label for="phone_{{ client.id }}" class="block text-sm text-text-standard ">Phone</label>
                                    <input type="text" name="phone" id="phone_{{ client.id }}" value="{{ client.phone }}"
                                           class="mt-1 block w-full px-4 py-2 border border rounded-md shadow-sm focus:outline-none text-text-paragraph">
                                </div>

                                <!-- Projects (non-editable) -->
                                <div>
                                    <label class="block text-sm text-text-standard ">Projects</label>
                                    <ul class="mt-1 text-sm text-text-standard bg-background-muted rounded-md p-2 border border">
                                        {% for project in client.projects %}
                                            <li class="py-1"> <a href="#">{{ project.name }}</a></li> <!-- TODO add path -->
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>

                            <div class="flex justify-end space-x-3 mt-4">
                                <!-- Save Button -->
                                <button type="submit"
                                        class="py-2 px-4 shadow-sm text-base  rounded-md text-white bg-button-update hover:bg-button-hover-update focus:outline-none">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
