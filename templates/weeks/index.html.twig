{% extends 'base.html.twig' %}

{% block title %}Hello WeeksController!{% endblock %}
{% block body %}

    <!-- Turbo Frame for partial page updates -->
    <turbo-frame id="week-frame" data-controller="weeks">
        <div>
            <!-- Navigation links with correct week-year format -->
            <a href="/weeks/{{ week == 1 ? 53 : week - 1 }}-{{ week == 1 ? year - 1 : year }}"
               data-week="{{ week == 1 ? 53 : week - 1 }}"
               data-year="{{ week == 1 ? year - 1 : year }}"
               data-action="click->weeks#navigate">Previous Week</a>

            <a href="/weeks/{{ week == 53 ? 1 : week + 1 }}-{{ week == 53 ? year + 1 : year }}"
               data-week="{{ week == 53 ? 1 : week + 1 }}"
               data-year="{{ week == 53 ? year + 1 : year }}"
               data-action="click->weeks#navigate">Next Week</a>
        </div>
    </turbo-frame>
