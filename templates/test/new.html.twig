{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-lg mx-auto p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold mb-6">Create New Event</h1>

        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.title, 'Event Title', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.dateStart, 'Start Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.dateStart, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.dateStart) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.dateEnd, 'End Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.dateEnd, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.dateEnd) }}
        </div>

        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
            Create Event
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
